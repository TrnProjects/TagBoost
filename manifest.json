{
    "manifest_version": 3,
    "name": "TagBoost - Etsy & Redbubble AI Uploader & Design Customizer",
    "version": "1.3",
    "description": "Automatski popunjava Etsy i Redbubble oglase, optimizira SEO i prilagoÄ‘ava dizajn ekstenzije.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "windows",
        "commands",
        "notifications"
    ],
    "host_permissions": [
        "https://www.etsy.com/*",
        "https://www.redbubble.com/*",
        "https://api.openai.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "styles/*.css",
                "images/*.jpg"
            ],
            "matches": [
                "chrome-extension://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "TagBoost"
    },
    "icons": {
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.redbubble.com/*",
                "https://redbubble.com/*",
                "https://*.redbubble.com/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}