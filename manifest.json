{
    "manifest_version": 3,
    "name": "TagBoost - Etsy & Redbubble AI Uploader & Design Customizer",
    "version": "1.5.1",
    "description": "Automatski popunjava Etsy i Redbubble oglase, optimizira SEO i prilagoÄ‘ava dizajn ekstenzije.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "windows",
        "commands",
        "notifications"
    ],
    "host_permissions": [
        "https://www.etsy.com/*",
        "https://etsy.com/*",
        "https://*.etsy.com/*",
        "https://www.redbubble.com/*",
        "https://redbubble.com/*",
        "https://*.redbubble.com/*",
        "https://api.openai.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "TagBoost"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.redbubble.com/*",
                "https://redbubble.com/*",
                "https://*.redbubble.com/*",
                "https://www.etsy.com/*",
                "https://etsy.com/*",
                "https://*.etsy.com/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "scripts/popup.js",
                "scripts/config.js",
                "styles/*.css",
                "images/*.jpg",
                "images/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}