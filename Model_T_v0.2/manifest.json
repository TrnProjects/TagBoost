{
    "manifest_version": 3,
    "name": "TagBoost Minimal",
    "version": "1.0",
    "description": "Minimalna verzija testiranja slanja podataka",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://www.redbubble.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.redbubble.com/portfolio/images/new*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Title TagBoost Test"
    }
}